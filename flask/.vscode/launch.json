    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "cwd": "${workspaceFolder}/app",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_APP": "app.main",
            },
            "args": [
                "--app",
                "app.main",
                "run",
                "--no-debugger"
            ],
        }
    ]
}